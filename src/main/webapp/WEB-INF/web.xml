<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee">
    <display-name>API REST</display-name>
    <!-- Nombre que se mostrará en la consola del servidor -->
    <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>CONFIG.AppConfig</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <!-- Nombre del servlet que se está mapeando -->
        <url-pattern>/api/*</url-pattern>   
        <!-- Patrón de URL que mapea las solicitudes a este servlet -->
    </servlet-mapping>
</web-app>
